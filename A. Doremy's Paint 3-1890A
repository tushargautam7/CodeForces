#include <bits/stdc++.h>
using namespace std;

int main() {
    
    int t;
    if (!(cin >> t)) return 0;
    while (t--) {
        int n; 
        cin >> n;
        vector<int> a(n);
        unordered_map<int,int> freq;
        for (int i = 0; i < n; ++i) {
            cin >> a[i];
            ++freq[a[i]];
        }

        if (freq.size() > 2) {
            cout << "No\n";
        } else if (freq.size() == 1) {
            cout << "Yes\n";
        } else { 
            vector<int> cnts;
            for (auto &p : freq) cnts.push_back(p.second);
            cout << (abs(cnts[0] - cnts[1]) <= 1 ? "Yes\n" : "No\n");
        }
    }
    return 0;
}
